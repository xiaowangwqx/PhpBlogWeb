* {
  margin: 0;
  padding: 0;
}
body, html {
  height: 100%;
}
#app {
  /* width: 100%; */
  width: 450px;
  float: left;
  height: 100%;
}
.navs {
  float: left;
  width: 100px;
  height: 100%;
  background-color:#3FB781;
}
.posts {
  float: left;
  width: 350px;
  height: 100%;
}
.post-edit {
  margin-left: 450px;
  height: 100%;
  position: relative;
  border-left: 1px solid #eee;
}
.post-edit h2 {
  height: 70px;
  border-bottom: 1px solid #eee;
}
.post-edit .tools {
  background-color: #fff;
  height: 70px;
}
.post-edit h2 input {
  padding: 0 40px;
  width: 100%;
  height: 100%;
  border: 0;
  outline: none;
  font-size: 30px;

}
.tools {
  background-color: green;
  height: 100px;
}
.tools .btn-wrap {
  width: 200px;
  float: right;
}
.tools .btn {
  
}
.posts h2 {
  padding 0 30px
  height: 70px;
  line-height: 70px;
  // text-align: center;
  color: #666;
  border-bottom: 1px solid #eee;
}
.CodeMirror {
