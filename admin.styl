}
.navs li {
  color: #fff;
}
.navs li a{
  display block
  width 100%
  height 100%
  padding 20px 0  
  color: #fff;
}
.post-list {
  list-style-type: none;
  padding: 0 20px;
}
.post-list .post a{
  color: #666;
  text-decoration: none;
}
.post-list .post-time {
  margin-bottom: 20px;
}

.navs
  ul
    li
      text-align center
      &:hover
        background-color rgba(0,0,0,.6)
  a
    color #fff
    text-decoration: none
.post-list
  li.post
    padding 20px
    .post-title
      position relative
      font-size 25px
      color #3FB781
      margin-bottom 10px
      .delete-btn
        position absolute
        right 10px
        top 5px
        border: 0
        padding: 5px 15px
        color #fff
        background-color #3FB781
        outline: 0
        &:active
          top 7px
    .post-time
      font-size 14px
    // background-color red
.btn-wrap
  margin-top 15px
  margin-right -10px
  .btn
    border: 0
    outline: none
    background-color #3FB781
    color #ffffff
    padding 10px
    cursor pointer
    &:hover
      background-color #297E5A
.add-img:hover
  background-color #297E5A
  cursor pointer